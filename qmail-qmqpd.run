#!/bin/sh
exec 2>&1
#
# QMQP service 
#
USER=qmaild
QMAIL=/var/qmail
ME=$(head -1 $QMAIL/control/me)
CONCURRENCY=${CONCURRENCY:=50}

/* source the environemt in ./env */
eval `env - envdir ./env env`

PATH=$PATH:"$QMAIL/bin"

exec envdir ./env \
	envuidgid $USER \
	tcpserver -v -URl $ME -c $CONCURRENCY 
		-x$QMAIL/control/qmail-qmqpd.cdb 0 628 \
	$QMAIL/bin/qmail-qmqpd

