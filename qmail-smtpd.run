#!/bin/sh
exec 2>&1
#
# SMTP service 
#
USER=qmaild
QMAIL=/var/qmail
ME=$(head -1 $QMAIL/control/me)
CONCURRENCY=${CONCURRENCY:=50}

/* source the environemt in ./env */
eval `env - envdir ./env env`

PATH=$PATH:"$QMAIL/bin"

exec envdir ./env \
	envuidgid $USER \
	tcpserver -v -URl $ME -c $CONCURRENCY \
		-x$QMAIL/control/qmail-smtpd.cdb 0 smtp \
	$QMAIL/bin/pbscheck \
	$QMAIL/bin/qmail-smtpd

